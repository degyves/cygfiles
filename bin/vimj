#!/bin/sh 
NVIM_LISTEN_ADDRESS=~/tmp/nvim find $1 -not \( -name "target" -prune \)  -not \( -name "tmp" -prune \)  -not \( -name "build" -prune \)  -not \( -name ".git" -prune \)  -not \( -name ".gradle" -prune \) \( -name "*.xml" -or  -name "build.gradle" -or -name "*.asciidoc" -or -name "*.adoc" -or -name "*.java" -or -name "*.xhtml" -or -name "*.js" -or -name "*.html" -or -name "*.properties" -or -name "*.g4" -or -name "*.css" -or -name "*.scss" \) -exec nvim {} + 
