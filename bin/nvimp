#!/bin/sh
find $1 -not \( -name "target" -prune \) \
	-not \( -name "tmp" -prune \) \
	-not \( -name "build" -prune \) \
	-not \( -name ".git" -prune \) \
	-not \( -name ".gradle" -prune \) \( \
	-name "*.xml" -or \
	-name "build.gradle" -or \
	-name "*.asciidoc" -or \
	-name "*.java" -or \
	-name "*.properties" -or \
	-name "*.g4" \) \
	-exec nvim {} +

