setenv BUFFERFILE "/tmp/screen-exchange"
bufferfile "$BUFFERFILE"
startup_message off
# 10000 lineas de scrollback
defscrollback 10000
# usar los scrolls de xterm
# termcapinfo xterm* ti@:te@
# con "/" limpiar la pantalla
bind / eval "scrollback 0" "scrollback 10000"
# desactivar visual bell
vbell off
# divisores sin color de background
rendition so "="

#screensaver
# idle 60
# blankerprg cmatrix

screen -t Mutt bash
screen -t Irssi bash
screen -t smtpTunnel mail/smtpTunnel.sh
screen -t imapTunnel mail/imapTunnel.sh
# screen -t irssiTunnel bash
select Mutt

source ~/.screencustomrc
